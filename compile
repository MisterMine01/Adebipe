<?php

use Adebipe\Cli\Build;
use Adebipe\Cli\MakeClasses;

putenv('ENV=build');

try {
    include_once __DIR__ . '/services/Cli/Builder/Builder.php';
    $build = new Builder();
    $build->build();
} catch (Throwable $e) {
    throw $e;
    MakeClasses::$injector->getService(Logger::class)->critical($e->getMessage(), $e->getTrace());
    MakeClasses::stopServices();
    throw $e;
}